{
    "name": "flashback",
    "version": "0.0.1",
    "description": "Flashback flashcards",
    "author": "Jonathan Hall <flimzy@flimzy.com",
    "main": "./webclient/main.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/flimzy/flashback"
    },
    "dependencies": {
        "pouchdb": ">=5.2.0",
        "pouchdb-find": "*",
        "browserify-shim": "*"
    },
    "browser": {
        "jquery-mobile": "./webclient/vendor/jquery.mobile-1.4.5/jquery.mobile-1.4.5.js",
        "jquery": "./webclient/vendor/jquery-2.1.4/jquery-2.1.4.js",
        "main": "./main.js"
    },
    "browserify": {
        "transform": [ "browserify-shim" ]
    },
    "browserify-shim": {
        "jquery": {
            "exports": "$"
        },
        "jquery-mobile": {
            "exports": "$.mobile",
            "depends": [ "jquery:$" ]
        }
    }
}
